<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/bgd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha="0.2"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/flash_screen_bg" />

    <ImageView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="40dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgd"
        app:srcCompat="@drawable/bar1" />

    <TextView
        android:id="@+id/login"
        android:layout_width="234dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="12dp"
        android:text="Terms n conditions"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tcText"
        android:layout_width="345dp"
        android:layout_height="366dp"
        android:layout_marginTop="148dp"
        android:layout_marginBottom="359dp"
        android:text="By accessing or using the Mobile App, you agree to these Bosch Easy Air Terms (&quot;Terms&quot;) as well as the Bosch Easy Air Privacy Statement, each of which is incorporated herein by reference. These Terms also incorporate the Google, Inc. (&quot;Google&quot;) Terms and Conditions located at Google Play Terms of Service including, without limitation, the Google Play Developer Distribution Agreement (together, &quot;Google Play Terms&quot;) To the extent there may be a conflict among these Terms and the Google Play Terms, these Terms control."
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:lineHeight="29dp" />

    <CheckBox
        android:id="@+id/checkBoxTC"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="190dp"
        android:text="I accept the Terms and Conditions"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bgd"
        app:layout_constraintStart_toStartOf="@+id/bgd" />

    <CheckBox
        android:id="@+id/checkBoxpvc"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="146dp"
        android:text="I accept the privacy statement"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bgd" />

    <Button
        android:id="@+id/proceed"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginBottom="76dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:text="Proceed"
        app:layout_constraintBottom_toBottomOf="@+id/bgd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Proceed" />

</androidx.constraintlayout.widget.ConstraintLayout>